@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đổi Mật Khẩu</title>
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="auth-container">
        <h1 class="main-title">Hệ thống cố vấn học tập</h1>
        <h2 class="sub-title">Đổi mật khẩu</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div class="input-group">
                <input type="password" name="currentPassword" placeholder="Mật khẩu hiện tại" required>
            </div>
            <div class="input-group">
                <input type="password" name="newPassword" placeholder="Mật khẩu mới" required>
            </div>
            <div class="input-group">
                <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu mới" required>
            </div>
            <button type="submit" class="btn">Đổi mật khẩu</button>
            <p class="switch-auth"><a asp-controller="Account" asp-action="Profile">Quay lại trang cá nhân</a></p>
        </form>
    </div>
</body>
</html> 