@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu</title>
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="auth-container">
        <h1 class="main-title">Hệ thống cố vấn học tập</h1>
        <h2 class="sub-title">Quên mật khẩu</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="ForgotPassword" method="post">
            <div class="input-group">
                <input type="email" name="email" placeholder="Email" required autofocus />
            </div>
            <button type="submit" class="btn">Gửi link đặt lại mật khẩu</button>
            <p class="switch-auth"><a asp-action="Login" asp-controller="Account">Quay lại đăng nhập</a></p>
        </form>
    </div>
</body>
</html> 