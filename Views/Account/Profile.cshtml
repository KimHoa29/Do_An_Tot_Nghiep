@model Do_An_Tot_Nghiep.Models.User

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container mt-4">
    <h2>Thông tin tài khoản</h2>
    <hr>
    <table class="table">
        <tr>
            <th>Tên đăng nhập:</th>
            <td>@Model.Username</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Vai trò:</th>
            <td>@Model.Role</td>
        </tr>
        <tr>
            <th>Ngày tạo:</th>
            <td>@Model.CreatedAt.ToString("dd/MM/yyyy")</td>
        </tr>
    </table>
    <a asp-action="EditProfile" class="btn btn-primary">Chỉnh sửa</a>
</div>
