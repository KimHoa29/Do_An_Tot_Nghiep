@model Do_An_Tot_Nghiep.Models.Student

@{
    ViewData["Title"] = "Thông tin sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Thông tin sinh viên</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mã sinh viên:</dt>
                        <dd class="col-sm-8">@Model.StudentId</dd>

                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Lớp:</dt>
                        <dd class="col-sm-8">@Model.Class</dd>

                        <dt class="col-sm-4">Ngành:</dt>
                        <dd class="col-sm-8">@Model.Major</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Tên đăng nhập:</dt>
                        <dd class="col-sm-8">@Model.User?.Username</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Chỉnh sửa thông tin</a>
            <a asp-action="ChangePassword" class="btn btn-warning">Đổi mật khẩu</a>
            <a href="/Home/Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div> 