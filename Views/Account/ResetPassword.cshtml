@model Do_An_Tot_Nghiep.Controllers.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đặt lại mật khẩu";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt lại mật khẩu</title>
    <link rel="stylesheet" href="~/css/auth.css">
</head>
<body>
    <div class="auth-container">
        <h1 class="main-title">Hệ thống cố vấn học tập</h1>
        <h2 class="sub-title">Đặt lại mật khẩu</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary(false)
            </div>
        }

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Token" />
            <div class="input-group">
                <input asp-for="NewPassword" type="password" placeholder="Mật khẩu mới" required />
            </div>
            <div class="input-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Xác nhận mật khẩu" required />
            </div>
            <button type="submit" class="btn">Đặt lại mật khẩu</button>
            <p class="switch-auth"><a asp-action="Login" asp-controller="Account">Quay lại đăng nhập</a></p>
        </form>
    </div>
</body>
</html> 