@model Do_An_Tot_Nghiep.Models.Group

@{
    ViewData["Title"] = "Tạo nhóm mới";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-sm rounded-4 p-4" style="min-width: 370px; max-width: 420px; width: 100%; border: none;">
        <div class="text-center mb-4">
            <span class="d-inline-block bg-white rounded-circle shadow-sm p-3 mb-2">
                <i class="fas fa-users fa-2x text-warning"></i>
            </span>
            <h2 class="fw-bold mb-1 text-warning">Tạo nhóm mới</h2>
            <p class="text-muted mb-0">Điền thông tin để tạo nhóm học tập của bạn</p>
        </div>
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
            <div class="mb-3">
                <label asp-for="GroupName" class="form-label fw-semibold">Tên nhóm</label>
                <input asp-for="GroupName" class="form-control modern-input" placeholder="Nhập tên nhóm..." />
                <span asp-validation-for="GroupName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                <input asp-for="Description" class="form-control modern-input" placeholder="Mô tả ngắn về nhóm..." />
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>
            <input asp-for="CreatedAt" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-warning btn-lg rounded-pill fw-bold shadow-sm">
                    <i class="fas fa-plus-circle me-2"></i> Tạo nhóm
                </button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a href="#" onclick="window.history.back(); return false;" class="text-decoration-none text-secondary small"><i class="fas fa-arrow-left me-1"></i>Quay lại danh sách</a>
        </div>
    </div>
</div>

<style>
    .modern-input {
        border-radius: 1.5rem;
        border: 1.5px solid #ffe0b2;
        background: #fff;
        font-size: 1.08rem;
        padding: 0.7rem 1.2rem;
        transition: border-color 0.2s, box-shadow 0.2s;
        box-shadow: none;
    }
    .modern-input:focus {
        border-color: #ff9800;
        box-shadow: 0 0 0 0.12rem rgba(255,152,0,0.13);
        background: #fffbe7;
    }
    .btn-warning {
        background: #ff9800;
        border: none;
        color: #fff;
        border-radius: 2.5rem !important;
        font-size: 1.08rem;
        font-weight: 600;
        padding: 0.7rem 0;
        min-height: 48px;
        box-shadow: 0 2px 12px rgba(255,152,0,0.10);
        transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.1s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        letter-spacing: 0.01em;
    }
    .btn-warning i {
        font-size: 1.1em;
        margin-right: 0.5rem;
    }
    .btn-warning:hover, .btn-warning:focus {
        background: #ffa726;
        color: #fff;
        box-shadow: 0 4px 18px rgba(255,152,0,0.18);
        transform: translateY(-2px) scale(1.03);
    }
    .btn-warning:active {
        background: #fb8c00;
        color: #fff;
        box-shadow: 0 1px 4px rgba(255,152,0,0.10);
        transform: scale(0.98);
    }
    .card {
        border: none;
        box-shadow: 0 4px 24px rgba(255,152,0,0.10);
    }
    .text-warning {
        color: #ff9800 !important;
    }
    @@ media (max-width: 576px) {
        .card { padding: 1.2rem !important; }
        .container { padding: 0 !important; }
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
