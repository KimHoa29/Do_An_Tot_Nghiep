@model Do_An_Tot_Nghiep.Models.Group

@{
    ViewData["Title"] = "Chi tiết nhóm";
}

<div class="container mt-4">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header py-3 rounded-top-4">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">
                    <i class="fas fa-users me-2"></i>Chi tiết nhóm: <span class="fw-bold">@Model.GroupName</span>
                </h3>
                <a href="@Url.Action("Edit", new { id = Model.GroupId })" class="btn btn-light btn-sm rounded-pill shadow-sm">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
            </div>
        </div>
        <div class="card-body p-4 bg-light rounded-bottom-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm rounded-3">
                        <div class="card-body">
                            <h5 class="text-primary mb-4">
                                <i class="fas fa-info-circle me-2"></i>Thông tin nhóm
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td class="text-muted" style="width: 140px;">
                                            <i class="fas fa-signature me-2"></i>Tên nhóm:
                                        </td>
                                        <td class="fw-bold">@Model.GroupName</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">
                                            <i class="fas fa-align-left me-2"></i>Mô tả:
                                        </td>
                                        <td>@Model.Description</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">
                                            <i class="fas fa-calendar-alt me-2"></i>Ngày tạo:
                                        </td>
                                        <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5 class="text-primary mb-0">
                                    <i class="fas fa-user-friends me-2"></i>Danh sách thành viên
                                </h5>
                                <a href="@Url.Action("AddUsers", new { id = Model.GroupId })" class="btn btn-primary rounded-pill shadow-sm">
                                    <i class="fas fa-user-plus me-2"></i>Thêm thành viên
                                </a>
                            </div>

                            @if (Model.GroupUsers != null && Model.GroupUsers.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Họ và tên</th>
                                                <th>Vai trò</th>
                                                <th>Ngày tham gia</th>
                                                <th class="text-end">Thao tác</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var member in Model.GroupUsers)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <span class="fw-bold">@member.User.Username</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @{
                                                            string roleText = "";
                                                            string roleClass = "";
                                                            switch (member.User.Role)
                                                            {
                                                                case "Admin":
                                                                    roleText = "Quản trị viên";
                                                                    roleClass = "badge bg-danger";
                                                                    break;
                                                                case "Lecturer":
                                                                    roleText = "Giảng viên";
                                                                    roleClass = "badge bg-primary";
                                                                    break;
                                                                case "Student":
                                                                    roleText = "Sinh viên";
                                                                    roleClass = "badge bg-success";
                                                                    break;
                                                                default:
                                                                    roleText = "Người dùng";
                                                                    roleClass = "badge bg-secondary";
                                                                    break;
                                                            }
                                                        }
                                                        <span class="@roleClass rounded-pill px-3 py-1">@roleText</span>
                                                    </td>
                                                    <td>
                                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                                        @member.JoinedAt.ToString("dd/MM/yyyy HH:mm")
                                                    </td>
                                                    <td class="text-end">
                                                        <form asp-action="RemoveUserFromGroup" method="post" class="d-inline">
                                                            <input type="hidden" name="groupId" value="@Model.GroupId" />
                                                            <input type="hidden" name="userId" value="@member.UserId" />
                                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle" 
                                                                    title="Xóa khỏi nhóm" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này khỏi nhóm?');">
                                                                <i class="fas fa-user-minus"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info d-flex align-items-center">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <span>Chưa có thành viên nào trong nhóm.</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a href="@Url.Action("Index")" class="btn btn-secondary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hiển thị thông báo nếu có
            @if (TempData["Success"] != null)
            {
                <text>
                toastr.success('@TempData["Success"]');
                </text>
            }
            @if (TempData["Error"] != null)
            {
                <text>
                toastr.error('@TempData["Error"]');
                </text>
            }
        });
    </script>
}
