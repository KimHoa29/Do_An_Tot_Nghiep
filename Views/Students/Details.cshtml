@model Do_An_Tot_Nghiep.Models.Student

@{
    ViewData["Title"] = "Thông tin sinh viên";
}

<div class="container-fluid px-4 py-3">
    <div class="row">
        <div class="col-12 mb-3">
            <h4 class="text-white bg-primary px-3 py-2 rounded-1 mb-0">Thông tin sinh viên</h4>
        </div>
    </div>

    <div class="row">
        <!-- Thông tin sinh viên -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="position-relative d-inline-block">
                            <img src="@(Model.User?.Avatar ?? "/uploads/img/avatar/default-avatar.jpg")" 
                                 alt="Avatar" 
                                 class="rounded-circle border border-2 border-primary" 
                                 style="width: 120px; height: 120px; object-fit: cover;" />
                            <div class="position-absolute bottom-0 end-0 bg-success rounded-circle border border-white" 
                                 style="width: 12px; height: 12px;"></div>
                        </div>
                        <h5 class="text-primary mt-3 mb-1 fw-bold">@Model.FullName</h5>
                        <div class="badge bg-primary">Sinh viên</div>
                    </div>

                    <div class="student-info">
                        <div class="info-item d-flex align-items-center py-2 border-bottom">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-id-card text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Mã sinh viên</div>
                                <div class="fw-medium">@Model.UserId</div>
                            </div>
                        </div>

                        <div class="info-item d-flex align-items-center py-2 border-bottom">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-graduation-cap text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Lớp</div>
                                <div class="fw-medium">@Model.Class</div>
                            </div>
                        </div>

                        <div class="info-item d-flex align-items-center py-2 border-bottom">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-book text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Ngành</div>
                                <div class="fw-medium">@Model.Major</div>
                            </div>
                        </div>

                        <div class="info-item d-flex align-items-center py-2 border-bottom">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-phone text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Điện thoại</div>
                                <div class="fw-medium">@Model.Phone</div>
                            </div>
                        </div>

                        <div class="info-item d-flex align-items-center py-2 border-bottom">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-envelope text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Email</div>
                                <div class="fw-medium">@Model.Email</div>
                            </div>
                        </div>

                        <div class="info-item d-flex align-items-center py-2">
                            <div class="icon-wrapper me-3">
                                <i class="fas fa-calendar text-primary"></i>
                            </div>
                            <div>
                                <div class="text-muted small">Ngày tạo</div>
                                <div class="fw-medium">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-edit me-1"></i> Sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách giảng viên -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                            <h6 class="mb-0">Danh sách giảng viên quản lý</h6>
                        </div>
                        <span class="badge bg-primary rounded-pill">@(ViewBag.Lecturers?.Count ?? 0) giảng viên</span>
                    </div>

                    @if (ViewBag.Lecturers != null && ViewBag.Lecturers.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr class="bg-light">
                                        <th class="border-0 py-2">Họ tên</th>
                                        <th class="border-0 py-2">Chức vụ</th>
                                        <th class="border-0 py-2">Email</th>
                                        <th class="border-0 py-2">Điện thoại</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lecturer in ViewBag.Lecturers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle p-2 me-2">
                                                        <i class="fas fa-user-tie text-primary"></i>
                                                    </div>
                                                    <span class="fw-medium">@lecturer.FullName</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info bg-opacity-10 text-info">
                                                    @lecturer.Position
                                                </span>
                                            </td>
                                            <td>
                                                <a href="mailto:@lecturer.Email" class="text-decoration-none text-primary">
                                                    <i class="fas fa-envelope me-1 small"></i>
                                                    @lecturer.Email
                                                </a>
                                            </td>
                                            <td>
                                                <a href="tel:@lecturer.Phone" class="text-decoration-none text-primary">
                                                    <i class="fas fa-phone me-1 small"></i>
                                                    @lecturer.Phone
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info bg-info bg-opacity-10 border-0 d-flex align-items-center">
                            <i class="fas fa-info-circle text-info me-2"></i>
                            <span>Chưa có giảng viên nào được phân công hướng dẫn.</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
