@model Do_An_Tot_Nghiep.Models.Student

@{
    ViewData["Title"] = "Thông tin sinh viên";
}

<div class="container-fluid px-4 py-3" style="background: #f8f9fa; min-height: 100vh;">
    <div class="row">
        <div class="col-12 mb-3">
            <h4 class="px-2 py-2 mb-0" style="background:transparent;color:#222;font-size:1.3rem;font-weight:600;letter-spacing:0.01em;">Thông tin sinh viên</h4>
        </div>
    </div>
    <div class="row">
        <!-- Thông tin sinh viên -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100" style="background: #fff; border-radius: 10px;">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="@(Model.User?.Avatar ?? "/uploads/img/avatar/default-avatar.jpg")" alt="Avatar" class="rounded-circle border" style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #FF9800;" />
                        <h5 class="mt-3 mb-1 fw-semibold" style="color: #222;">@Model.FullName</h5>
                        <div class="badge" style="background: #FF9800; color: #fff; font-weight: 500; border-radius: 6px;">Sinh viên</div>
                    </div>
                    <div class="student-info" style="font-size: 1rem;">
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-id-card me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Mã sinh viên</span>
                                <div class="fw-medium" style="color: #222;">@Model.UserId</div>
                            </div>
                        </div>
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-graduation-cap me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Lớp</span>
                                <div class="fw-medium" style="color: #222;">@Model.Class</div>
                            </div>
                        </div>
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-book me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Ngành</span>
                                <div class="fw-medium" style="color: #222;">@Model.Major</div>
                            </div>
                        </div>
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-phone me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Điện thoại</span>
                                <div class="fw-medium" style="color: #222;">@Model.Phone</div>
                            </div>
                        </div>
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-envelope me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Email</span>
                                <div class="fw-medium" style="color: #222;">@Model.Email</div>
                            </div>
                        </div>
                        <div class="info-item py-2 d-flex align-items-center">
                            <i class="fas fa-calendar me-2" style="font-size: 1rem; color: #FF9800;"></i>
                            <div>
                                <span class="small" style="color: #222;">Ngày tạo</span>
                                <div class="fw-medium" style="color: #222;">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-outline-warning btn-sm btn-edit-custom" style="color: #FF9800; border-color: #FF9800; transition: background 0.2s, color 0.2s;">
                            <i class="fas fa-edit me-1" style="color: #FF9800; transition: color 0.2s;"></i> Sửa
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Danh sách giảng viên -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm h-100" style="background: #fff; border-radius: 10px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-chalkboard-teacher me-2" style="color: #FF9800;"></i>
                            <h6 class="mb-0" style="font-weight: 600;">Danh sách giảng viên quản lý</h6>
                        </div>
                        <span class="badge" style="background: #fff3e0; color: #222; border: 1px solid #FF9800; font-weight: 600;">@(ViewBag.Lecturers?.Count ?? 0) giảng viên</span>
                    </div>
                    @if (ViewBag.Lecturers != null && ViewBag.Lecturers.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0" style="background: #f8f9fa;">
                                <thead>
                                    <tr style="background: #f1f3f4;">
                                        <th class="border-0 py-2">Họ tên</th>
                                        <th class="border-0 py-2">Chức vụ</th>
                                        <th class="border-0 py-2">Email</th>
                                        <th class="border-0 py-2">Điện thoại</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lecturer in ViewBag.Lecturers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-light rounded-circle p-2 me-2">
                                                        <i class="fas fa-user-tie" style="color: #FF9800;"></i>
                                                    </div>
                                                    <span class="fw-medium">@lecturer.FullName</span>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge" style="background: #fff3e0; color: #222; border: 1px solid #FF9800; font-weight: 600;">@lecturer.Position</span>
                                            </td>
                                            <td>
                                                <a href="mailto:@lecturer.Email" class="text-decoration-none" style="color: #222;">
                                                    <i class="fas fa-envelope me-1 small" style="color: #FF9800;"></i>
                                                    @lecturer.Email
                                                </a>
                                            </td>
                                            <td>
                                                <a href="tel:@lecturer.Phone" class="text-decoration-none" style="color: #222;">
                                                    <i class="fas fa-phone me-1 small" style="color: #FF9800;"></i>
                                                    @lecturer.Phone
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info bg-white border-0 d-flex align-items-center" style="color: #222;">
                            <i class="fas fa-info-circle me-2" style="color: #FF9800;"></i>
                            <span>Chưa có giảng viên nào được phân công hướng dẫn.</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .btn-edit-custom:hover, .btn-edit-custom:focus {
            background: #FF9800 !important;
            color: #fff !important;
            border-color: #FF9800 !important;
        }
        .btn-edit-custom:hover i, .btn-edit-custom:focus i {
            color: #fff !important;
        }
    </style>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
