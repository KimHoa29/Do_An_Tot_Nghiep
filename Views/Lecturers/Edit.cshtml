@model Do_An_Tot_Nghiep.Models.Lecturer

@{
    ViewData["Title"] = "Chỉnh sửa giảng viên";
}

<head>
    <link rel="stylesheet" href="~/css/form-style.css" />
    <style>
        /* Style custom cho input file */
        .custom-file-input::-webkit-file-upload-button {
            visibility: hidden;
        }
        .custom-file-input::before {
            content: 'Chọn ảnh';
            display: inline-block;
            background: #fff;
            border: 1px solid #FF9800;
            color: #FF9800;
            border-radius: 6px;
            padding: 6px 18px;
            outline: none;
            white-space: nowrap;
            cursor: pointer;
            font-weight: 500;
            font-size: 1rem;
            transition: background 0.2s, color 0.2s;
        }
        .custom-file-input:hover::before, .custom-file-input:focus::before {
            background: #FF9800;
            color: #fff;
        }
        .custom-file-input:active::before {
            background: #FF9800;
            color: #fff;
        }
        /* Ẩn nút mặc định trên Firefox */
        .custom-file-input::-ms-browse {
            visibility: hidden;
        }
        .btn-orange-custom {
            color: #FF9800;
            border-color: #FF9800;
            background: #fff;
            font-weight: 500;
            transition: background 0.2s, color 0.2s;
        }
        .btn-orange-custom:hover, .btn-orange-custom:focus {
            background: #FF9800 !important;
            color: #fff !important;
            border-color: #FF9800 !important;
        }
    </style>
</head>

<h2 class="text-center text-primary mt-3 fw-bold">Chỉnh sửa giảng viên</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 form-container">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LecturerId" />

            <!-- Ảnh đại diện -->
            @{
                var avatarUrl = Model?.User?.Avatar ?? "/uploads/img/avatar/default-avatar.jpg";
            }

            <div class="mb-4 text-center">
                <img id="avatarPreview" class="rounded-circle mb-3"
                     src="@avatarUrl"
                     style="width: 150px; height: 150px; object-fit: cover;" />
                <div class="mb-3">
                    <label for="avatarFile" class="form-label">Ảnh đại diện</label>
                    <input type="file" class="form-control custom-file-input" id="avatarFile" name="avatarFile" accept="image/*" onchange="previewImage(this);" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="UserId" class="form-label">Mã giảng viên</label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Position" class="form-label">Chức vụ <span class="text-danger">*</span></label>
                <input asp-for="Position" class="form-control" required />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department" class="form-label">Khoa <span class="text-danger">*</span></label>
                <input asp-for="Department" class="form-control" required />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specialization" class="form-label">Chuyên môn</label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CreatedAt" class="form-label">Ngày tạo</label>
                <input asp-for="CreatedAt" class="form-control" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-warning px-4 shadow btn-orange-custom">Lưu</button>
                <a href="javascript:history.back()" class="btn btn-outline-warning px-4 ms-2 shadow btn-orange-custom">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}