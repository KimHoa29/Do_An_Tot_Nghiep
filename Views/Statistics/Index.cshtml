@{
    ViewData["Title"] = "Thống kê hệ thống";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Thống kê hệ thống</h1>
        <div class="text-muted small">
            <i class="fas fa-sync-alt me-1"></i> Cập nhật: @DateTime.Now.ToString("HH:mm, dd/MM/yyyy")
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tổng người dùng</h6>
                            <h3 class="mb-0">@(ViewBag.UserStats?.TotalUsers ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-primary">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>Giảng viên: @(ViewBag.UserStats?.Lecturers ?? 0)</span>
                            <span>Sinh viên: @(ViewBag.UserStats?.Students ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tài liệu</h6>
                            <h3 class="mb-0">@(ViewBag.ContentStats?.TotalDocuments ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-success">
                            <i class="fas fa-file-alt"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex flex-wrap gap-3 text-muted small">
                            <span>Public: @(ViewBag.ContentStats?.PublicDocuments ?? 0)</span>
                            <span>Private: @(ViewBag.ContentStats?.PrivateDocuments ?? 0)</span>
                            <span>Group: @(ViewBag.ContentStats?.GroupDocuments ?? 0)</span>
                            <span>Custom: @(ViewBag.ContentStats?.CustomDocuments ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Chủ đề</h6>
                            <h3 class="mb-0">@(ViewBag.ContentStats?.TotalTopics ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-info">
                            <i class="fas fa-comments"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex flex-wrap gap-3 text-muted small">
                            <span>Public: @(ViewBag.ContentStats?.PublicTopics ?? 0)</span>
                            <span>Private: @(ViewBag.ContentStats?.PrivateTopics ?? 0)</span>
                            <span>Group: @(ViewBag.ContentStats?.GroupTopics ?? 0)</span>
                            <span>Custom: @(ViewBag.ContentStats?.CustomTopics ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Bài viết</h6>
                            <h3 class="mb-0">@(ViewBag.ContentStats?.TotalPosts ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-warning">
                            <i class="fas fa-newspaper"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex flex-wrap gap-3 text-muted small">
                            <span>Public: @(ViewBag.ContentStats?.PublicPosts ?? 0)</span>
                            <span>Private: @(ViewBag.ContentStats?.PrivatePosts ?? 0)</span>
                            <span>Group: @(ViewBag.ContentStats?.GroupPosts ?? 0)</span>
                            <span>Custom: @(ViewBag.ContentStats?.CustomPosts ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Engagement Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Tương tác</h6>
                            <h3 class="mb-0">@(ViewBag.EngagementStats?.TotalLikes ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-danger">
                            <i class="fas fa-heart"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>Tài liệu: @(ViewBag.EngagementStats?.DocumentLikes ?? 0)</span>
                            <span>Chủ đề: @(ViewBag.EngagementStats?.TopicLikes ?? 0)</span>
                            <span>Bài viết: @(ViewBag.EngagementStats?.PostLikes ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Bình luận</h6>
                            <h3 class="mb-0">@(ViewBag.CommentStats?.TotalComments ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-info">
                            <i class="fas fa-comment-dots"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>Tài liệu: @(ViewBag.CommentStats?.DocumentComments ?? 0)</span>
                            <span>Chủ đề: @(ViewBag.CommentStats?.TopicComments ?? 0)</span>
                            <span>Bài viết: @(ViewBag.CommentStats?.PostComments ?? 0)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Nhóm</h6>
                            <h3 class="mb-0">@(ViewBag.GroupStats?.TotalGroups ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-success">
                            <i class="fas fa-users-cog"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>Thành viên: @(ViewBag.GroupStats?.TotalGroupUsers ?? 0)</span>
                            <span>TB/Nhóm: @((ViewBag.GroupStats?.AverageUsersPerGroup ?? 0).ToString("F1"))</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Thẻ</h6>
                            <h3 class="mb-0">@(ViewBag.TagStats?.TotalTags ?? 0)</h3>
                        </div>
                        <div class="stat-icon bg-warning">
                            <i class="fas fa-tags"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>Đã sử dụng: @(ViewBag.TagStats?.UsedTags ?? 0)</span>
                            <span>TB/Chủ đề: @((ViewBag.TagStats?.AverageTagsPerTopic ?? 0).ToString("F1"))</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Hoạt động trong 30 ngày gần đây</h5>
                    <div style="position: relative; height: 300px;">
                        <canvas id="activityChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Thẻ được sử dụng nhiều nhất</h5>
                    <div style="position: relative; height: 300px;">
                        <canvas id="tagsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Stats -->
    <div class="row g-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-4">Người dùng tích cực</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Người dùng</th>
                                    <th>Vai trò</th>
                                    <th>Tài liệu</th>
                                    <th>Chủ đề</th>
                                    <th>Bình luận</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.MostActiveUsers != null)
                                {
                                    foreach (var user in ViewBag.MostActiveUsers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user-circle me-2 text-primary"></i>
                                                    @user.UserName
                                                </div>
                                            </td>
                                            <td>
                                                @if (user.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger">Admin</span>
                                                }
                                                else if (user.Role == "Lecturer")
                                                {
                                                    <span class="badge bg-primary">Giảng viên</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">Sinh viên</span>
                                                }
                                            </td>
                                            <td>@user.DocumentCount</td>
                                            <td>@user.TopicCount</td>
                                            <td>@user.CommentCount</td>
                                            <td>
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar bg-success" role="progressbar" 
                                                         style="width: @(Math.Min(100, (user.DocumentCount + user.TopicCount + user.CommentCount) * 5))%">
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Không có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Activity Chart
            const activityCtx = document.getElementById('activityChart');
            if (activityCtx) {
                new Chart(activityCtx, {
                    type: 'line',
                    data: {
                        labels: @Html.Raw(Json.Serialize(ViewBag.ActivityDates ?? new List<string>())),
                        datasets: [
                            {
                                label: 'Tài liệu',
                                data: @Html.Raw(Json.Serialize(ViewBag.DocumentActivity ?? new List<int>())),
                                borderColor: '#4e73df',
                                backgroundColor: 'rgba(78, 115, 223, 0.05)',
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Chủ đề',
                                data: @Html.Raw(Json.Serialize(ViewBag.TopicActivity ?? new List<int>())),
                                borderColor: '#1cc88a',
                                backgroundColor: 'rgba(28, 200, 138, 0.05)',
                                tension: 0.3,
                                fill: true
                            },
                            {
                                label: 'Bình luận',
                                data: @Html.Raw(Json.Serialize(ViewBag.CommentActivity ?? new List<int>())),
                                borderColor: '#f6c23e',
                                backgroundColor: 'rgba(246, 194, 62, 0.05)',
                                tension: 0.3,
                                fill: true
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'top',
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.05)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        }
                    }
                });
            }

            // Tags Chart
            const tagsCtx = document.getElementById('tagsChart');
            if (tagsCtx) {
                new Chart(tagsCtx, {
                    type: 'doughnut',
                    data: {
                        labels: @Html.Raw(Json.Serialize(ViewBag.TagNames ?? new List<string>())),
                        datasets: [{
                            data: @Html.Raw(Json.Serialize(ViewBag.TagCounts ?? new List<int>())),
                            backgroundColor: [
                                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
                                '#5a5c69', '#858796', '#6f42c1', '#20c9a6', '#f8f9fc'
                            ],
                            borderWidth: 0
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: {
                                    boxWidth: 12,
                                    padding: 15
                                }
                            }
                        },
                        cutout: '70%'
                    }
                });
            }
        });
    </script>

    <style>
        .stat-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            transition: transform 0.2s;
            background-color: #fff;
        }

        .stat-card:hover {
            transform: translateY(-3px);
        }

        .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .stat-icon i {
            font-size: 1.5rem;
        }

        .bg-primary {
            background-color: #4e73df !important;
        }

        .bg-success {
            background-color: #1cc88a !important;
        }

        .bg-info {
            background-color: #36b9cc !important;
        }

        .bg-warning {
            background-color: #f6c23e !important;
        }

        .bg-danger {
            background-color: #e74a3b !important;
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            background-color: #fff;
        }

        .card-title {
            color: #5a5c69;
            font-weight: 600;
        }

        .table {
            margin-bottom: 0;
        }

        .table th {
            font-weight: 600;
            color: #5a5c69;
            border-top: none;
            background-color: #f8f9fc;
        }

        .badge {
            padding: 0.5em 0.75em;
            font-weight: 500;
        }

        .progress {
            background-color: #eaecf4;
            border-radius: 3px;
        }

        .progress-bar {
            border-radius: 3px;
        }

        .text-muted {
            color: #858796 !important;
        }

        .table td {
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fc;
        }
    </style>
} 