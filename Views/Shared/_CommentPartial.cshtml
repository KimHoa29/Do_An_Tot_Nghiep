@model Do_An_Tot_Nghiep.Models.Comment

<div class="comment" id="comment-@Model.CommentId">
    <div class="d-flex">
        <img src="@(string.IsNullOrEmpty(Model.User?.Avatar) ? "/css/img/default-avatar.jpg" : Model.User.Avatar)" alt="Avatar" class="avatar me-3" style="width: 40px; height: 40px; border-radius: 50%;" />
        <div class="flex-grow-1">
            <div class="comment-content p-3 rounded" style="background-color: #f0f2f5;">
                <h6 class="mb-1">@Model.User?.Username</h6>
                <p class="mb-1">@Model.Content</p>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Comment Image" class="img-fluid mb-2" style="max-width: 200px;" />
                }
                <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
            </div>
            <div class="mt-2">
                <button class="btn btn-link btn-sm reply-button" data-comment-id="@Model.CommentId">Phản hồi</button>
            </div>
        </div>
    </div>
</div> 