@model Post

@{
    var currentUserId = Context.Session.GetString("USERID");
    var isOwner = !string.IsNullOrEmpty(currentUserId) && Model.UserId.ToString() == currentUserId;

    // Kiểm tra xem người dùng hiện tại đã like bài viết chưa
    var isLiked = false;
    if (!string.IsNullOrEmpty(currentUserId) && int.TryParse(currentUserId, out int currentUserIdInt))
    {
        isLiked = Model.LikePosts != null && Model.LikePosts.Any(lp => lp.UserId == currentUserIdInt);
    }
    var likeCount = Model.LikePosts?.Count ?? 0;

    // Kiểm tra xem người dùng hiện tại đã lưu bài viết chưa
    var isSaved = false;
    if (!string.IsNullOrEmpty(currentUserId) && int.TryParse(currentUserId, out int currentUserIdInt2))
    {
        isSaved = Model.Saves != null && Model.Saves.Any(s => s.UserId == currentUserIdInt2);
    }
    var saveCount = Model.Saves?.Count ?? 0;

    // Log để debug
    System.Diagnostics.Debug.WriteLine($"Post ID: {Model.PostId}");
    System.Diagnostics.Debug.WriteLine($"Current User ID: {currentUserId}");
    System.Diagnostics.Debug.WriteLine($"Post User ID: {Model.UserId}");
    System.Diagnostics.Debug.WriteLine($"Is Owner: {isOwner}");
    System.Diagnostics.Debug.WriteLine($"Is Liked: {isLiked}");
    System.Diagnostics.Debug.WriteLine($"Like Count: {likeCount}");
    if (Model.LikePosts != null)
    {
        foreach (var like in Model.LikePosts)
        {
            System.Diagnostics.Debug.WriteLine($"Like by user: {like.UserId}");
        }
    }
}

@if (Model != null)
{
