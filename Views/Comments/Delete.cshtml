@model Do_An_Tot_Nghiep.Models.Comment

@{
    ViewData["Title"] = "Xóa bình luận";
}

<h1>Xóa bình luận</h1>

<h3>Bạn có chắc chắn muốn xóa bình luận này?</h3>
<div>
    <h4>Thông tin bình luận</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Chủ đề</dt>
        <dd class="col-sm-10">@Model.Topic?.Title</dd>

        <dt class="col-sm-2">Người dùng</dt>
        <dd class="col-sm-10">@Model.User?.Username</dd>

        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Ảnh đính kèm</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                    <img src="@Model.ImageUrl" alt="Ảnh bình luận" width="150" class="img-thumbnail" />
            }
            else
            {
                    <span>Không có ảnh</span>
            }
        </dd>

        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CommentId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
